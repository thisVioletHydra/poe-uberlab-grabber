{
  "display": "TypeScript compiler",
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,

    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "noEmit": true,
    "noImplicitAny": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@routes": ["server/src/routes/index"],
      "@routes/*": ["server/src/routes/*"],
      "@app/*": ["server/src/app/*"],
      "@models/*": ["server/src/models/*"],
      "@middleware/*": ["server/src/middleware/*"],
      "@helper/*": ["server/src/helper/*"],

      "@access": ["./.access/index"],
      "@access/*": ["./.access/*"],

      "@root": ["."],
      "@/*": ["./*"],
      "@@/*": ["./*"],
      "~/*": ["./*"],
      "~~/*": ["./*"]
    }
  },

  "include": ["server/src"],
  "exclude": ["node_modules", ".nuxt", "dist", "docs", "webpack", "assets"]
}
